                            http://www.springframework.org/schema/util 
                            http://www.springframework.org/schema/util/spring-util.xsd"
>
    <import 
        resource="applicationContextFactories.xml" 
    /> 
    
    <import 
        resource="applicationContextBeans.xml" 
    /> 
    
    <tx:annotation-driven 
        transaction-manager="transactionManager" 
    />  
                    
    <context:component-scan 
        base-package="cz.muni.fi.mir.mathmlevaluation" 
    />
    
    <context:spring-configured />
    
    <aop:aspectj-autoproxy 
        proxy-target-class="true"
    />
    
    <task:scheduler 
        id="mathScheduler" 
        pool-size="${scheduler.pool-size}" 
    />
    
    <task:annotation-driven 
        executor="taskExecutor" 
        scheduler="mathScheduler"
        exception-handler="uncaughtExceptionHandler"
    /> 
    
    
    
