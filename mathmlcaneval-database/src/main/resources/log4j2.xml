<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d %-5p [%t] %C (%F:%L) - %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="cz.muni" level="DEBUG"/>
    <Logger name="org.apache.log4j.xml" level="info"/>
    <Logger name="org.hibernate" level="FATAL"/>
    <Logger name="org.dozer" level="FATAL"/>
    <Logger name="org.apache.commons.beanutils" level="error"/>
    <Logger name="org.apache.commons.digester" level="error"/>
    <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="info"/>
    <Logger name="org.hibernate.tool.hbm2ddl.SchemaExport" level="FATAL"/>
    <Logger name="com.mchange.v2.c3p0" level="FATAL"/>
    <Logger name="org.springframework" level="ERROR" />
    <Logger name="org.springframework.security" level="trace" />
    <Root level="info">
      <AppenderRef ref="STDOUT"/>
    </Root>
  </Loggers>
</Configuration>