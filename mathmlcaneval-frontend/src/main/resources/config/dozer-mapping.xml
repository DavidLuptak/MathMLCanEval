<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net  
                              http://dozer.sourceforge.net/schema/beanmapping.xsd">  
    <configuration>
        <!--
        nutnost vlastnej konverzie, pretoze by default by hodilo hodnotu .now()
        -->
        <custom-converters>
            <converter type="cz.muni.fi.mir.mathmlevaluation.tools.JodaTimeConverter">
                <class-a>org.joda.time.DateTime</class-a>
                <class-b>org.joda.time.DateTime</class-b>
            </converter>  
        </custom-converters>
    </configuration>
    
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.Annotation</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.AnnotationForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.ApplicationRun</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.ApplicationRunForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.CanonicOutput</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.CanonicOutputForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.Configuration</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.ConfigurationForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.Formula</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.FormulaForm</class-b>
        <field>
            <a>program</a>
            <b>programForm</b>
        </field>
        <field>
            <a>sourceDocument</a>
            <b>sourceDocumentForm</b>
        </field>
        <field>
            <a>user</a>
            <b>userForm</b>
        </field>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.Program</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.ProgramForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.Revision</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.RevisionForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.SourceDocument</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.SourceDocumentForm</class-b>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.User</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.UserForm</class-b>
        <field>
            <a>userRoles</a>
            <b>userRoleForms</b>
        </field>
    </mapping>
    <mapping>
        <class-a>cz.muni.fi.mir.mathmlevaluation.db.domain.UserRole</class-a>
        <class-b>cz.muni.fi.mir.mathmlevaluation.forms.UserRoleForm</class-b>        
    </mapping>
</mappings>
