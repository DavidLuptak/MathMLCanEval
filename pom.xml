<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>cz.muni.fi.mir</groupId>
    <artifactId>mathmlcaneval</artifactId>
    <version>2.0</version>
    <packaging>pom</packaging>
    <modules>
        <module>mathmlcaneval-api</module>
        <module>mathmlcaneval-database</module>
        <module>mathmlcaneval-services</module>
        <module>mathmlcaneval-webapp</module>
        <module>mathmlcaneval-dependencies</module>
    </modules>
    
    <name>MathMLCanEval</name>
    
    <developers>
        <developer>
            <email>emptulik@gmail.com</email>
            <name>Dominik Szalai</name>
        </developer>
    </developers>
    
    <organization>
        <name>MIR@MU</name>
        <url>https://mir.fi.muni.cz/</url>
    </organization>
 
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>
    
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
        <org.springframework.version>4.2.3.RELEASE</org.springframework.version>
        <org.springframework.security.version>4.0.3.RELEASE</org.springframework.security.version>
        <org.hibernate.version>5.0.5.Final</org.hibernate.version>
        <main.basedir>${project.basedir}</main.basedir>
    </properties>
    
    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <build.profile.id>dev</build.profile.id>
            </properties>
        </profile>
        <profile>
            <id>production</id>
            <properties>
                <build.profile.id>production</build.profile.id>
            </properties>
        </profile>
        <profile>            
            <id>test</id>
            <properties>
                <build.profile.id>test</build.profile.id>
            </properties>            
        </profile>
    </profiles>
    
    <repositories>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </repository>
    </repositories>
</project>